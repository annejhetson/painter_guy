<% if @booking.errors.any? %>
  <ul>
    <% @booking.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>



<% if current_user %>
  <h3>Book a job with us below.</h3>
  <hr>
  <%= form_for @booking, url: bookings_path do |f| %>
    <div><%= f.label :description %><br />
    <%= f.text_area :comment, rows: 6, autofocus: true %></div>
    <div><%= f.label :name %><br />
    <%= f.text_field :name %></div>
    <div><%= f.label :date %><br />
    <%= f.date_field :start_time %></div>
    <div><%= f.label :time %><br />
    <%= f.time_field :time %></div>


    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :email, value: current_user.email %>
    <div><%= f.submit "Book It!" %></div>
  <% end %>
<% else %>
  <h3>Please login to book a job with us</h3>
  <%= link_to "Leave us a comment", "/contacts" %>
<% end %>


