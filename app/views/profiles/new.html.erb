<% if @profile.errors.any? %>
	<% @profile.errors.full_messages.each do |message| %>
		<li><%= message %></li>
	<% end %>
<% end %>

<% if current_user %>
	<%= form_for @profile, url: user_profiles_path do |f| %>
		<div><%= f.label :Street %><br />
		<%= f.text_field :street %></div>

		<div><%= f.label :City %><br />
		<%= f.text_field :city %></div>

		<div><%= f.label :State %><br />
		<%= f.text_field :state %></div>
		
		<div><%= f.label :Zipcode %><br />
		<%= f.text_field :zip %></div>
		<%= f.hidden_field :user_id, value: current_user.id %><br>

		<%= f.submit "Create Profile" %>
	<% end %>
<% end %>